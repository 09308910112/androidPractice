<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.lanyou.lpc.progressbarloading.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ProgressBar
        android:id="@+id/pb1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/loading_progress_bar"
        android:background="#000"
        />

    <ProgressBar
        android:id="@+id/progress_bar_ios"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_centerInParent="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/progress_drawable_white"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_loading_white_02"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_padding"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="-70dp"
        android:layout_marginTop="-25dp"
        android:background="@color/colorAccent"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:text="测试返回"/>
</LinearLayout>
