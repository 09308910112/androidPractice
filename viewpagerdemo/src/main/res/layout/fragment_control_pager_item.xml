<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:orientation="vertical">

        <!--第一行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/control_viewpager_item_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_first"
                style="@style/control_viewpager_item">

                <ImageView
                    style="@style/control_viewpager_image"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    style="@style/control_viewpager_textview"
                    android:text="111111" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/divider_control_grid_color" />

            <LinearLayout
                android:id="@+id/ll_second"
                style="@style/control_viewpager_item">

                <ImageView
                    style="@style/control_viewpager_image"
                   />

                <TextView
                    style="@style/control_viewpager_textview"
                    android:text="22222" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/divider_control_grid_color" />
        <!--第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/control_viewpager_item_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_third"
                style="@style/control_viewpager_item">

                <ImageView
                    style="@style/control_viewpager_image"/>

                <TextView
                    style="@style/control_viewpager_textview"
                    android:text="111111" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/divider_control_grid_color" />


            <LinearLayout
                android:id="@+id/ll_forth"
                style="@style/control_viewpager_item">

                <ImageView
                    style="@style/control_viewpager_image"/>

                <TextView
                    style="@style/control_viewpager_textview"
                    android:text="111111" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
